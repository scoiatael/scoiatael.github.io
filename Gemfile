# If you do not have OpenSSL installed, update
# the following line to use "http://" instead
source 'https://rubygems.org'

gem "middleman", "~>3.3.12"

# Blog for projects
gem 'middleman-blog'

# Live-reloading plugin
gem "middleman-livereload", "~> 3.1.0"

# More style
gem 'bitters'
gem 'bourbon'
gem 'neat'

# haml instead of ERB
gem 'haml'

# jQuery
gem "jquery-middleman"

# React
gem "middleman-react"
